FROM hashicorp/terraform:light
WORKDIR /

RUN apk update 
RUN apk add bash jq py-pip 
RUN apk add --virtual azbuild gcc libffi-dev musl-dev openssl-dev python-dev make 
RUN pip install --upgrade pip 
RUN pip install azure-cli 
RUN apk del --purge azbuild

COPY tfrunner.sh /terraform/tfrunner
RUN chmod +x /terraform/tfrunner
ENV PATH="/terraform:${PATH}"

ENTRYPOINT [ "tfrunner" ]

